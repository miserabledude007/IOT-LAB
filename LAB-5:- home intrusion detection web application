FILE NAME:- motion_sensor_alert.ino

const int motionSensorPin = 2;   	// Pin connected to the PIR motion sensor
const int buzzerPin = 8;        	 // Pin connected to the buzzer

void setup() {
  pinMode(motionSensorPin, INPUT);   	// Initialize motion sensor pin as input
  pinMode(buzzerPin, OUTPUT);      	  // Initialize buzzer pin as output
  Serial.begin(9600);               	// Initialize serial communication at 9600 baud
}

void loop() {
  int motionState = digitalRead(motionSensorPin);  	// Read the state of the motion sensor

  if (motionState == HIGH) {     	// If motion is detected (assuming HIGH means detected)
    digitalWrite(buzzerPin, HIGH); 	// Turn the buzzer on
    Serial.println("Intrusion detected! Alerting..."); 	// Print intrusion detected message
  } else {
    digitalWrite(buzzerPin, LOW);  	// Turn the buzzer off
    Serial.println("No intrusion detected."); 	// Print no intrusion message
  }

  delay(100); 	// Short delay to reduce serial output frequency
}
