FILE NAME:- temperature_sensor_reading.ino

const int sensor = A5; // Assigning analog pin A5 to variable 'sensor'
float tempc; // Variable to store temperature in degrees Celsius
float tempf; // Variable to store temperature in Fahrenheit
float vout; // Temporary variable to hold sensor reading

void setup() {
  pinMode(sensor, INPUT); // Configuring sensor pin as input
  Serial.begin(9600); // Initialize serial communication at 9600 baud rate
}

void loop() {
  // Read the value from the sensor (0 to 1023)
  int sensorValue = analogRead(sensor);
  
  // Convert the sensor reading to a voltage (0 to 5V)
  vout = (sensorValue * 5.0) / 1023.0;

  // Convert the voltage to temperature in Celsius
  // Assuming a linear sensor where 0V corresponds to 0째C and 5V to 100째C
  tempc = vout * 100.0; // Adjust this formula based on the specific sensor
  
  // Convert Celsius to Fahrenheit
  tempf = (tempc * 1.8) + 32;

  // Print the temperature values to the Serial Monitor
  Serial.print("Temperature in Celsius = ");
  Serial.print(tempc);
  Serial.print(" 째C\t");
  Serial.print("Temperature in Fahrenheit = ");
  Serial.print(tempf);
  Serial.println(" 째F");

  // Delay for a short period to make the output readable
  delay(500); // Delay of 500 milliseconds (0.5 seconds)
}
