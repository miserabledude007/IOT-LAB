FILE NAME:- temperature_sensor_reading.ino

const int lm35_pin = A1; // Define the analog pin connected to the LM35 sensor

void setup() {
    Serial.begin(9600); // Initialize serial communication at 9600 baud rate
}

void loop() {
    int temp_adc_val;    // Variable to store the raw ADC value from the sensor
    float temp_val;      // Variable to store the temperature value in Celsius

    temp_adc_val = analogRead(lm35_pin); // Read the analog value from the LM35 sensor
    temp_val = (temp_adc_val * 0.488);    // Convert the ADC value to temperature in Celsius
    // LM35 output is 10mV/°C; ADC value corresponds to (5V/1024) * 10mV = 0.488°C per unit

    Serial.print("Temperature = ");
    Serial.print(temp_val); // Print the temperature value in Celsius
    Serial.println(" °C");

    delay(1000); // Wait for 1 second before taking the next reading
}
